<div class="page-header">
  <h1>
    Tblinvoices
    <a href="/tblinvoices/new" class="btn btn-lg btn-success">New Tblinvoice</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "tblinvoices_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :invoice_prepared, "Invoice prepared" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='invoice_preparedgteqPicker'>
                  <%= f.text_field :invoice_prepared_gteq, :class => "form-control", :placeholder => "Invoice prepared greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='invoice_preparedlteqPicker'>
                  <%= f.text_field :invoice_prepared_lteq, :class => "form-control", :placeholder => "Invoice prepared less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#invoice_preparedgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#invoice_preparedlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#invoice_preparedgteqPicker').on("dp.change", function (e) {
                  $('#invoice_preparedlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#invoice_preparedlteqPicker').on("dp.change", function (e) {
                  $('#invoice_preparedgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :invoice_end, "Invoice end" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='invoice_endgteqPicker'>
                  <%= f.text_field :invoice_end_gteq, :class => "form-control", :placeholder => "Invoice end greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='invoice_endlteqPicker'>
                  <%= f.text_field :invoice_end_lteq, :class => "form-control", :placeholder => "Invoice end less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#invoice_endgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#invoice_endlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#invoice_endgteqPicker').on("dp.change", function (e) {
                  $('#invoice_endlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#invoice_endlteqPicker').on("dp.change", function (e) {
                  $('#invoice_endgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :invoice_start, "Invoice start" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='invoice_startgteqPicker'>
                  <%= f.text_field :invoice_start_gteq, :class => "form-control", :placeholder => "Invoice start greater than or equal to" %>
