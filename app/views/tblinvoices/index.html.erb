      </div>
      <script type="text/javascript">
          $(function () {
              $('#invoice_startgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#invoice_startlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#invoice_startgteqPicker').on("dp.change", function (e) {
                  $('#invoice_startlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#invoice_startlteqPicker').on("dp.change", function (e) {
                  $('#invoice_startgteqPicker').data("DateTimePicker").maxDate(e.date);
