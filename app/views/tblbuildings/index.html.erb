<div class="page-header">
  <h1>
    Tblbuildings
    <a href="/tblbuildings/new" class="btn btn-lg btn-success">New Tblbuilding</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "tblbuildings_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :buildingname_cont, "Buildingname contains" %>
    <%= f.text_field :buildingname_cont, :class => "form-control", :placeholder => "Buildingname contains" %>
  </div>

<div class="form-group">
    <%= f.label :buildingcity_cont, "Buildingcity contains" %>
    <%= f.text_field :buildingcity_cont, :class => "form-control", :placeholder => "Buildingcity contains" %>
  </div>

<div class="form-group">
    <%= f.label :buildingzip_cont, "Buildingzip contains" %>
    <%= f.text_field :buildingzip_cont, :class => "form-control", :placeholder => "Buildingzip contains" %>
  </div>

<div class="form-group">
    <%= f.label :buildingowner_cont, "Buildingowner contains" %>
    <%= f.text_field :buildingowner_cont, :class => "form-control", :placeholder => "Buildingowner contains" %>
  </div>

<div class="form-group">
    <%= f.label :buildingaddress_cont, "Buildingaddress contains" %>
    <%= f.text_field :buildingaddress_cont, :class => "form-control", :placeholder => "Buildingaddress contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/tblbuildings" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#tblbuildings_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Buildingname</th>
        <th>Buildingaddress</th>
        <th>Buildingowner</th>
        <th>Buildingzip</th>
        <th>Buildingcity</th>
        <th>Actions</th>
      </tr>

      <% @tblbuildings.each do |tblbuilding| %>
      <tr>
        <td><%= tblbuilding.buildingname %></td>
        <td><%= tblbuilding.buildingaddress %></td>
        <td><%= tblbuilding.buildingowner %></td>
        <td><%= tblbuilding.buildingzip %></td>
        <td><%= tblbuilding.buildingcity %></td>
        <td>
          <a href="/tblbuildings/<%= tblbuilding.id %>" class="btn btn-primary">Show</a>
          <a href="/tblbuildings/<%= tblbuilding.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tblbuilding/<%= tblbuilding.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tblbuildings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
