<div class="page-header">
  <h3>Tblbuilding #<%= @tblbuilding.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Buildingname</dt>
      <dd><%= @tblbuilding.buildingname %></dd>

      <dt>Buildingaddress</dt>
      <dd><%= @tblbuilding.buildingaddress %></dd>

      <dt>Buildingowner</dt>
      <dd><%= @tblbuilding.buildingowner %></dd>

      <dt>Buildingzip</dt>
      <dd><%= @tblbuilding.buildingzip %></dd>

      <dt>Buildingcity</dt>
      <dd><%= @tblbuilding.buildingcity %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tblbuildings" class="btn btn-primary">
        Back
      </a>
      <a href="/tblbuildings/<%= @tblbuilding.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tblbuilding/<%= @tblbuilding.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Tblbuilding has many tblapartments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Tblapartments
      </li>

      <% @tblbuilding.tblapartments.each do |tblapartment| %>
        <li class="list-group-item">
          <a href="/tblapartments/<%= tblapartment.id %>">
            <%= tblapartment.building_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/tblapartments/<%= tblapartment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/tblapartments/<%= tblapartment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_tblapartment/<%= tblapartment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
