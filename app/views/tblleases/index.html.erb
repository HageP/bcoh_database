<div class="page-header">
  <h1>
    Tblleases
    <a href="/tblleases/new" class="btn btn-lg btn-success">New Tbllease</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "tblleases_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :deposit, "Deposit" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :deposit_gteq, :class => "form-control", :placeholder => "Deposit greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :deposit_lteq, :class => "form-control", :placeholder => "Deposit less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :tenant_last_cont, "Tenant last contains" %>
    <%= f.text_field :tenant_last_cont, :class => "form-control", :placeholder => "Tenant last contains" %>
  </div>

<div class="form-group">
  <%= f.label :daily_rate, "Daily rate" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :daily_rate_gteq, :class => "form-control", :placeholder => "Daily rate greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :daily_rate_lteq, :class => "form-control", :placeholder => "Daily rate less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :lease_end, "Lease end" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='lease_endgteqPicker'>
                  <%= f.text_field :lease_end_gteq, :class => "form-control", :placeholder => "Lease end greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='lease_endlteqPicker'>
                  <%= f.text_field :lease_end_lteq, :class => "form-control", :placeholder => "Lease end less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#lease_endgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#lease_endlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#lease_endgteqPicker').on("dp.change", function (e) {
                  $('#lease_endlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#lease_endlteqPicker').on("dp.change", function (e) {
                  $('#lease_endgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :lease_start, "Lease start" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='lease_startgteqPicker'>
                  <%= f.text_field :lease_start_gteq, :class => "form-control", :placeholder => "Lease start greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='lease_startlteqPicker'>
                  <%= f.text_field :lease_start_lteq, :class => "form-control", :placeholder => "Lease start less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#lease_startgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#lease_startlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#lease_startgteqPicker').on("dp.change", function (e) {
                  $('#lease_startlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#lease_startlteqPicker').on("dp.change", function (e) {
                  $('#lease_startgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :tenant_tenant_first_cont, "Tbltenant tenant_first contains" %>
      <%= f.text_field :tenant_tenant_first_cont, :class => "form-control", :placeholder => "Tbltenant tenant_first contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/tblleases" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#tblleases_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Apartment</th>
        <th>Lease start</th>
        <th>Lease end</th>
        <th>Daily rate</th>
        <th>Tenant</th>
        <th>Tenant last</th>
        <th>Deposit</th>
        <th>Actions</th>
      </tr>

      <% @tblleases.each do |tbllease| %>
      <tr>
        <td>
          <% if tbllease.apartment.present? %>
            <a href="/tblapartments/<%= tbllease.apartment.id %>">
              <%= tbllease.apartment.building_id %>
            </a>
          <% end %>
        </td>
        <td><%= tbllease.lease_start %></td>
        <td><%= tbllease.lease_end %></td>
        <td><%= tbllease.daily_rate %></td>
        <td>
          <% if tbllease.tenant.present? %>
            <a href="/tbltenants/<%= tbllease.tenant.id %>">
              <%= tbllease.tenant.tenant_first %>
            </a>
          <% end %>
        </td>
        <td><%= tbllease.tenant_last %></td>
        <td><%= tbllease.deposit %></td>
        <td>
          <a href="/tblleases/<%= tbllease.id %>" class="btn btn-primary">Show</a>
          <a href="/tblleases/<%= tbllease.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tbllease/<%= tbllease.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tblleases, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
