<!-- Validation failure messages -->
<% if @tblpaymentmethod.errors.any? %>
  <% @tblpaymentmethod.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tblpaymentmethod #<%= @tblpaymentmethod.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_tblpaymentmethod/<%= @tblpaymentmethod.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for method -->
      <div class="form-group">
        <label for="method" class="control-label">
          Method
        </label>

        <input type="text" id="method" name="method" placeholder="Method" class="form-control" value="<%= @tblpaymentmethod.method %>">
      </div>

      <button class="btn btn-warning">
        Update Tblpaymentmethod
      </button>
      or
      <a href="/tblpaymentmethods/<%= @tblpaymentmethod.id %>">Cancel</a>
    </form>
  </div>
</div>
